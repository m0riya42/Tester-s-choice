                                    </DataTemplate>
                                </ListView.ItemTemplate>-->
                <!--
                                    </ListView>
                                </Border>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>-->
            </TabControl>
        </Grid>
    </Border>
</UserControl>
